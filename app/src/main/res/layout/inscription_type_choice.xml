<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ChercheurInscTypCho"
        style="@style/Widget.Material3.Button.TextButton.Snackbar"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#6750A3"
        android:text="@string/inscrire_chercheur"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/EmployeurInscTypCho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <Button
        android:id="@+id/EmployeurInscTypCho"
        style="@style/Widget.Material3.Button.TextButton.Snackbar"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#6750A3"
        android:text="@string/inscrire_employeur"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/AgenceInscTypCho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <Button
        android:id="@+id/AgenceInscTypCho"
        style="@style/Widget.Material3.Button.TextButton.Snackbar"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#6750A3"
        android:text="@string/inscrire_agence"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/returnInscTypCho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="413dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:background="#DBD2F3"
        android:lineSpacingExtra="8sp"
        android:text="@string/teliod_app"
        android:textAlignment="viewStart"
        android:textColor="#A576DD"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck,TextSizeCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/titleInscTypCho"
        android:layout_width="342dp"
        android:layout_height="77dp"
        android:layout_marginTop="12dp"
        android:text="@string/inscription"
        android:textAlignment="textStart"
        android:textColor="#C6C6C6"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitle"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/returnInscTypCho"
        style="@style/Widget.Material3.Button.TextButton.Snackbar"
        android:layout_width="356dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#CF93E4"
        android:text="@string/retour_aux_offres"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>